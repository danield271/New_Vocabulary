<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.New_Vocabulary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/new_vocabulary_question_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Question?"/>

    <Button
        android:id="@+id/new_vocabulary_answer1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        android:background="@android:color/darker_gray"
        android:textSize="20dp"
        android:text="Answer1"/>

    <Button
        android:id="@+id/new_vocabulary_answer2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        android:background="@android:color/darker_gray"
        android:textSize="20dp"
        android:text="Answer2"/>

    <Button
        android:id="@+id/new_vocabulary_answer3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        android:background="@android:color/darker_gray"
        android:textSize="20dp"
        android:text="Answer3"/>

    <Button
        android:id="@+id/new_vocabulary_answer4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        android:background="@android:color/darker_gray"
        android:textSize="20dp"
        android:text="Answer4"/>

</LinearLayout>